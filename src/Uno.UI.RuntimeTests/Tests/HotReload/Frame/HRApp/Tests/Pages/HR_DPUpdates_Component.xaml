<UserControl
    x:Class="Uno.UI.RuntimeTests.Tests.HotReload.Frame.Pages.HR_DPUpdates_Component"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Grid
        Background="Green"
        Padding="12">

        <Grid
            Background="Red"
            BorderBrush="Yellow"
            BorderThickness="1"
            CornerRadius="8">

            <StackPanel
                Margin="12"
                Orientation="Horizontal">

                <Ellipse
                    Fill="#fec84b"
                    Height="10"
                    Margin="0,0,8,0"
                    Width="10" />

                <TextBlock
                    FontSize="13"
                    FontWeight="SemiBold"
                    Text="Statusbar"
                    VerticalAlignment="Center" />

            </StackPanel>

        </Grid>

    </Grid>

</UserControl>
