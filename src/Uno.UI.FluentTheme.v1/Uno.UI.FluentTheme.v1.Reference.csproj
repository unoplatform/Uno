		<UnoRuntimeIdentifier>Reference</UnoRuntimeIdentifier>
	</PropertyGroup>

	<ItemGroup>
		<ProjectReference Include="..\Uno.UI\Uno.UI.Reference.csproj" />
	</ItemGroup>

	<ItemGroup>
		<PackageReference Include="Uno.SourceGenerationTasks" />
	</ItemGroup>

	<Import Project="..\Uno.CrossTargetting.props" />
