<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:contract7Present="http://schemas.microsoft.com/winfx/2006/xaml/presentation?IsApiContractPresent(Windows.Foundation.UniversalApiContract,7)" xmlns:controls="using:Microsoft.UI.Xaml.Controls">
    <!--
        Uno specific theme resources
    -->
    <ResourceDictionary.ThemeDictionaries>
        <ResourceDictionary x:Key="Default">
            <SolidColorBrush x:Key="UnoTextControlElevationBorderOverlayBrush" Color="#79FFFFFF" />
            <SolidColorBrush x:Key="UnoTextControlBorderOverlayBrushFocused" Color="{ThemeResource SystemAccentColorLight2}" />
            <SolidColorBrush x:Key="UnoElevationBorderOverlayBrush" Color="#06FFFFFF" />
        </ResourceDictionary>

        <ResourceDictionary x:Key="Light">
            <SolidColorBrush x:Key="UnoTextControlElevationBorderOverlayBrush" Color="#63000000" />
            <SolidColorBrush x:Key="UnoTextControlBorderOverlayBrushFocused" Color="{ThemeResource SystemAccentColorDark1}" />
            <SolidColorBrush x:Key="UnoElevationBorderOverlayBrush" Color="#1A000000" />
        </ResourceDictionary>

        <ResourceDictionary x:Key="HighContrast">
            <SolidColorBrush x:Key="UnoTextControlElevationBorderOverlayBrush" Color="#8BFFFFFF" />
            <SolidColorBrush x:Key="UnoTextControlBorderOverlayBrushFocused" Color="{ThemeResource SystemAccentColorLight2}" />
            <SolidColorBrush x:Key="UnoElevationBorderOverlayBrush" Color="#FF0000" />
        </ResourceDictionary>
    </ResourceDictionary.ThemeDictionaries>
    
    <Thickness x:Key="UnoTextControlBottomBorderFocusedThickness">0,0,0,2</Thickness>
    
</ResourceDictionary>
