<Page x:Class="UITests.Windows_UI_Input.PointersTests.HitTest_Control"
	  xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
	  xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	  xmlns:local="using:UITests.Windows_UI_Input.PointersTests"
	  xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
	  xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
	  mc:Ignorable="d"
	  Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

	<StackPanel>
		<Button x:Name="ResetButton"
				Content="Reset"
				Click="ResetResult" />
		<Grid Width="200"
			  Height="200">
			<ContentControl PointerPressed="BehindControlPressed"
							Content="dummy">
				<ContentControl.Template>
					<ControlTemplate>
						<Grid Background="Beige"
							  HorizontalAlignment="Stretch"
							  VerticalAlignment="Stretch" />
					</ControlTemplate>
				</ContentControl.Template>
			</ContentControl>
			<ContentControl x:Name="FrontControl"
							PointerPressed="FrontControlPressed"
							Content="dummy">
				<ContentControl.Template>
					<ControlTemplate>
						<Grid HorizontalAlignment="Stretch"
							  VerticalAlignment="Stretch">
							<Border Background="Blue"
									Width="100"
									Height="100"
									VerticalAlignment="Top"
									HorizontalAlignment="Left" />
							<Border Background="LightBlue"
									Width="100"
									Height="100"
									VerticalAlignment="Top"
									HorizontalAlignment="Right"
									IsHitTestVisible="False" />
						</Grid>
					</ControlTemplate>
				</ContentControl.Template>
			</ContentControl>
		</Grid>

		<TextBlock x:Name="ResultTextBlock"
				   Text="None" />
	</StackPanel>
</Page>
