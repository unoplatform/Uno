<UserControl
	x:Class="Uno.UI.Samples.UITests.ImageBrushTestControl.RectanglemaskingRectangleGrid" 
	xmlns:controls="using:Uno.UI.Samples.Controls"
	xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
	xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	xmlns:local="using:Uno.UI.Samples.UITests"
	xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
	xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
	mc:Ignorable="d"
	d:DesignHeight="300"
	d:DesignWidth="400">
	<StackPanel>
		<Border>
			<controls:SampleControl SampleDescription="RectanglemaskingRectangleGrid">
				<controls:SampleControl.SampleContent>
					<DataTemplate>
						<Grid Height="240" Width="240">
							<Rectangle Width="200" Height="200">
								<Rectangle.Fill>
									<ImageBrush ImageSource="http://homepages.cae.wisc.edu/~ece533/images/baboon.png" Stretch="Fill" />
								</Rectangle.Fill>
							</Rectangle>
							<Rectangle Width="120" Height="120" HorizontalAlignment="Right" VerticalAlignment="Bottom">
								<Rectangle.Fill>
									<ImageBrush ImageSource="http://homepages.cae.wisc.edu/~ece533/images/baboon.png" Stretch="Fill" />
								</Rectangle.Fill>
							</Rectangle>
						</Grid>
					</DataTemplate>
				</controls:SampleControl.SampleContent>
			</controls:SampleControl>
		</Border>
	</StackPanel>

</UserControl>
