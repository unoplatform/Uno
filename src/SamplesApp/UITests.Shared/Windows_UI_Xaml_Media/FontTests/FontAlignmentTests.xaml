<Page
    x:Class="UITests.Shared.Windows_UI_Xaml.Font.FontAlignmentTests"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:muxc="using:Microsoft.UI.Xaml.Controls"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}"
    mc:Ignorable="d">

    <StackPanel HorizontalAlignment="Left">
        <CheckBox Margin="0,24" Content="CheckBox with the missing vertical alignment" />

        <CheckBox Margin="0,24">
            <TextBlock Margin="0,4,0,0" Text="Checkbox with a TextBlock with a custom margin" />
        </CheckBox>

        <CheckBox Margin="0,24">
            <TextBlock
                Margin="0,4,0,0"
                VerticalAlignment="Center"
                Text="Checkbox with a TextBlock with VerticalAlignment=Center" />
        </CheckBox>

        <TextBox PlaceholderText="Enter your name123456:" Text="{Binding Name, Mode=TwoWay}" />

        <StackPanel Orientation="Horizontal">
            <TextBox
                Background="Blue"
                Foreground="White"
                Text="Test" />
            <Button
                AutomationProperties.AutomationId="SecondPageButton"
                Background="Blue"
                Content="Go to Second Page"
                Foreground="White" />
        </StackPanel>

        <!--  Dialog Information  -->
        <StackPanel Margin="0,15" CornerRadius="5">
            <TextBlock
                FontSize="18"
                FontWeight="Bold"
                Text="Configure TLCEV T1" />
            <Grid x:Name="MainGrid" Margin="0,24,0,0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="48" />
                    <ColumnDefinition Width="Auto" />
                </Grid.ColumnDefinitions>

                <StackPanel>
                    <TextBlock Style="{StaticResource PropertyHeaderTextBlockStyle}" Text="Charge non-approved OEMs" />
                    <ToggleSwitch
                        x:Name="Toggle"
                        Margin="0,4,0,0"
                        IsOn="True"
                        OffContent="Block"
                        OnContent="Allow" />
                    <Button
                        Margin="0,4,0,0"
                        Click="ShowTip"
                        Content="Help" />
                    <muxc:TeachingTip
                        x:Name="ToggleThemeTeachingTip3"
                        Title="What is a non-approved OEMs?"
                        PreferredPlacement="LeftBottom"
                        Target="{x:Bind Toggle}">
                        <muxc:TeachingTip.HeroContent>
                            <Image Margin="24" Source="/Assets/Images/vehicule.png" />
                        </muxc:TeachingTip.HeroContent>
                        <muxc:TeachingTip.Content>
                            <TextBlock
                                Margin="0,16,0,0"
                                Text="Explanation here"
                                TextWrapping="WrapWholeWords" />
                        </muxc:TeachingTip.Content>
                    </muxc:TeachingTip>

                    <TextBlock
                        Margin="0,16,0,0"
                        Style="{StaticResource PropertyHeaderTextBlockStyle}"
                        Text="Maximum power" />

                    <StackPanel Margin="0,4,0,0" Orientation="Horizontal">
                        <muxc:NumberBox
                            Width="160"
                            AutomationProperties.Name="NumberBox with spin button"
                            LargeChange="100"
                            SmallChange="10"
                            SpinButtonPlacementMode="Inline"
                            Value="300" />
                        <TextBlock
                            Margin="4,0,0,0"
                            VerticalAlignment="Center"
                            Text="kW" />
                    </StackPanel>

                    <TextBlock
                        Margin="0,16,0,0"
                        Style="{StaticResource PropertyHeaderTextBlockStyle}"
                        Text="Connection type" />

                    <ComboBox
                        Width="160"
                        Margin="0,4,0,0"
                        SelectedIndex="1">
                        <ComboBoxItem>CCS</ComboBoxItem>
                        <ComboBoxItem>NACS</ComboBoxItem>
                    </ComboBox>

                    <TextBlock
                        Margin="0,16,0,0"
                        Style="{StaticResource PropertyHeaderTextBlockStyle}"
                        Text="Portal password" />

                    <PasswordBox
                        Width="160"
                        Margin="0,4,0,0"
                        HorizontalAlignment="Left"
                        PlaceholderText="Enter your password" />
                    <!--  Show TeachingTip  -->
                </StackPanel>

                <StackPanel Grid.Column="2">
                    <CheckBox
                        Checked="ToggleButton_OnChecked"
                        Content="Is debug mode enabled"
                        Unchecked="ToggleButton_OnUnChecked" />
                    <TextBlock
                        Margin="0,12,0,0"
                        Style="{StaticResource PropertyHeaderTextBlockStyle}"
                        Text="Debug level verbosity" />

                    <RadioButtons
                        x:Name="MyRadioButtons"
                        IsEnabled="False"
                        SelectedIndex="1">
                        <x:String>Minimal</x:String>
                        <x:String>Normal</x:String>
                        <x:String>Detailed</x:String>
                    </RadioButtons>
                    <!--  Show TeachingTip  -->
                </StackPanel>
            </Grid>

            <StackPanel
                x:Name="ProgressStackPanel"
                Margin="0,24,0,0"
                Orientation="Horizontal"
                Visibility="Collapsed">
                <ProgressRing
                    Width="30"
                    Height="30"
                    Foreground="Blue"
                    IsActive="True" />

                <TextBlock
                    Margin="12,0,0,0"
                    VerticalAlignment="Center"
                    Text="Configuring TLCEV T1..." />
            </StackPanel>

            <InfoBar
                x:Name="InfoBar"
                Margin="0,12,0,0"
                IsClosable="False"
                Message="TLCEV T1 configured successfully"
                Severity="Success"
                Visibility="Collapsed" />
        </StackPanel>
    </StackPanel>
</Page>
