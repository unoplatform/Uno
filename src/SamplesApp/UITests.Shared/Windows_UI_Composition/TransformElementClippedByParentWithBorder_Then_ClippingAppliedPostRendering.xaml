<UserControl
    x:Class="UITests.Windows_UI_Composition.TransformElementClippedByParentWithBorder_Then_ClippingAppliedPostRendering"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:UITests.Windows_UI_Composition"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    d:DesignHeight="300"
    d:DesignWidth="400">

	<Grid>
		<Grid.ColumnDefinitions>
			<ColumnDefinition />
			<ColumnDefinition />
		</Grid.ColumnDefinitions>
		<Grid Grid.Column="0"
				Width="300"
				Height="300"
				BorderBrush="Chartreuse"
				BorderThickness="5"
				Background="#7F7FFF00"
				HorizontalAlignment="Left"
				VerticalAlignment="Top">
			<Grid
				Width="200"
				Height="200"
				HorizontalAlignment="Center"
				VerticalAlignment="Center"
				BorderBrush="DeepPink"
				BorderThickness="5"
				Background="#7FFF1493">
			<Grid
					Width="300"
					Height="300"
					HorizontalAlignment="Center"
					VerticalAlignment="Center"
					BorderBrush="DeepSkyBlue"
					BorderThickness="5"
					Background="#7F00BFFF">
				<Grid.RenderTransform>
				<TranslateTransform Y="200" />
				</Grid.RenderTransform>
			</Grid>
			</Grid>
		</Grid>
		<Canvas Grid.Column="1">
			<Rectangle
				Width="300"
				Height="300"
				Fill="#7F7FFF00"
				Stroke="Chartreuse"
				StrokeThickness="5" />
			<Rectangle Canvas.Left="50" Canvas.Top="50"
				Width="200"
				Height="200"
				Fill="#7FFF1493"
				Stroke="DeepPink"
				StrokeThickness="5" />
			<Rectangle Canvas.Left="55" Canvas.Top="200"
				Width="190"
				Height="45"
				Fill="#7F00BFFF" />
			<Line
				X1="55"
				Y1="200"
				X2="245"
				Y2="200"
				Stroke="DeepSkyBlue"
				StrokeThickness="5"/>
		</Canvas>
	</Grid>
</UserControl>
