<Page
	x:Class="UITests.Windows_UI_Composition.VisualRotationSample"
	xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
	xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	xmlns:local="using:UITests.Windows_UI_Composition"
	xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
	xmlns:muxc="using:Microsoft.UI.Xaml.Controls"
	xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
	mc:Ignorable="d"
	Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

	<StackPanel>
		<Grid HorizontalAlignment="Left" VerticalAlignment="Top" Width="500" Height="500" Background="Blue">
			<Border Width="150" Height="150" x:Name="myBorder" Background="Red" />
		</Grid>

		<Button Content="Rotate 45deg around center" Click="Button1_Click" />
		<Button Content="Rotate 45deg around origin" Click="Button2_Click" />
	</StackPanel>
</Page>
