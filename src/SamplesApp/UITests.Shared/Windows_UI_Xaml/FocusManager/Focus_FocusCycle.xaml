<Page
    x:Class="UITests.Windows_UI_Xaml.FocusTests.Focus_FocusCycle"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}"
    mc:Ignorable="d">

    <Grid Padding="12" RowSpacing="12">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        <TextBlock x:Name="MoveResultTextBlock" HorizontalAlignment="Center" />
        <Grid
            Grid.Row="1"
            HorizontalAlignment="Center"
            ColumnSpacing="8"
            RowSpacing="8">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="Auto" />
            </Grid.ColumnDefinitions>
            <Button
                Grid.ColumnSpan="3"
                AllowFocusOnInteraction="False"
                Click="FocusFirstClick">
                Set focus on B1
            </Button>
            <StackPanel
                Grid.Row="1"
                Grid.ColumnSpan="3"
                Orientation="Horizontal"
                Spacing="8">
                <Button
                    AllowFocusOnInteraction="False"
                    Click="FocusNextClick"
                    Tag="Previous">
                    Previous
                </Button>
                <Button
                    AllowFocusOnInteraction="False"
                    Click="FocusNextClick"
                    Tag="Next">
                    Next
                </Button>
            </StackPanel>
            <Button
                Grid.Row="2"
                Grid.Column="1"
                AllowFocusOnInteraction="False"
                Click="FocusNextClick"
                FontFamily="{ThemeResource SymbolThemeFontFamily}"
                Tag="Up">
                &#xE0E4;
            </Button>
            <Button
                Grid.Row="3"
                Grid.Column="0"
                AllowFocusOnInteraction="False"
                Click="FocusNextClick"
                FontFamily="{ThemeResource SymbolThemeFontFamily}"
                Tag="Left">
                &#xE0E2;
            </Button>
            <Button
                Grid.Row="3"
                Grid.Column="1"
                AllowFocusOnInteraction="False"
                Click="FocusNextClick"
                FontFamily="{ThemeResource SymbolThemeFontFamily}"
                Tag="Down">
                &#xE0E5;
            </Button>
            <Button
                Grid.Row="3"
                Grid.Column="2"
                AllowFocusOnInteraction="False"
                Click="FocusNextClick"
                FontFamily="{ThemeResource SymbolThemeFontFamily}"
                Tag="Right">
                &#xE0E3;
            </Button>
        </Grid>
        <Grid
            Grid.Row="2"
            TabFocusNavigation="Cycle"
            XYFocusKeyboardNavigation="Enabled">
            <Grid.RowDefinitions>
                <RowDefinition Height="0" />
                <RowDefinition Height="300" />
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>
            <TextBlock
                x:Name="KeyPressed"
                Grid.Row="0"
                Padding="10"
                FontWeight="ExtraBold"
                HorizontalTextAlignment="Center"
                TextWrapping="Wrap" />
            <StackPanel
                x:Name="ContainerPrimary"
                Grid.Row="1"
                MaxWidth="210"
                Padding="10"
                HorizontalAlignment="Center"
                BorderBrush="Green"
                BorderThickness="2"
                Orientation="Horizontal">
                <Button
                    x:Name="B1"
                    Margin="5"
                    Content="B1" />
                <StackPanel
                    x:Name="ContainerSecondary"
                    Margin="5"
                    Padding="5"
                    VerticalAlignment="Center"
                    BorderBrush="Red"
                    BorderThickness="2"
                    Orientation="Vertical"
                    TabFocusNavigation="Cycle"
                    XYFocusKeyboardNavigation="Enabled">
                    <TextBlock HorizontalAlignment="Center" Text="Cycle panel" />
                    <Button
                        x:Name="B2"
                        Margin="5"
                        HorizontalAlignment="Center"
                        Content="B2" />
                    <Button
                        x:Name="B3"
                        Margin="5"
                        HorizontalAlignment="Center"
                        Content="B3" />
                    <Button
                        x:Name="B4"
                        Margin="5"
                        HorizontalAlignment="Center"
                        Content="B4" />
                    <Button
                        x:Name="B5"
                        Margin="5"
                        HorizontalAlignment="Center"
                        Content="B5" />
                    <Button
                        x:Name="B6"
                        Margin="5"
                        HorizontalAlignment="Center"
                        Content="B6" />
                </StackPanel>
                <Button
                    x:Name="B7"
                    Margin="5"
                    Content="B7" />
            </StackPanel>
        </Grid>
    </Grid>
</Page>
