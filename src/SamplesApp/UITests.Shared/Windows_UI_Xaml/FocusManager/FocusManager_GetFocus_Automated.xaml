<UserControl x:Class="Uno.UI.Samples.Content.UITests.FocusTests.FocusManager_GetFocus_Automated"
						 xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
						 xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
						 xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
						 mc:Ignorable="">

  <Grid Background="White">
	<StackPanel x:Name="RootStackPanel"
							VerticalAlignment="Center">

	  <StackPanel HorizontalAlignment="Center">

		<!-- Label -->
		<TextBlock Text="Currently focused control"
							 FontSize="22"/>
		<!-- Current Control -->
		<Border Background="LightGray"
						Margin="0,8,0,0">
		  <TextBlock x:Name="TxtCurrentFocused"
							   Text="&lt;none&gt;"
							   FontSize="18"
							   FontWeight="Bold"
							   TextAlignment="Center"
							   Margin="0,6"/>
		</Border>
	  </StackPanel>

	  <Grid>
		<Grid.ColumnDefinitions>
		  <ColumnDefinition Width="*" />
		  <ColumnDefinition Width="*" />
		  <ColumnDefinition Width="*" />
		  <ColumnDefinition Width="*" />
		</Grid.ColumnDefinitions>
		<StackPanel Grid.Column="1">

		  <!-- single TextBox  -->
		  <Border BorderThickness="2"
						  BorderBrush="Black"
						  Margin="0,24,0,0">
			<TextBox x:Name="TextBoxSingleLine"
							 Text="This a single line textbox"
							 FontSize="18"
							 Margin="6"/>
		  </Border>

		  <!-- MultiLine TextBox  -->
		  <Border BorderThickness="2"
						  BorderBrush="Black"
						  Margin="0,16,0,0">
			<TextBox x:Name="TextBoxMultiLine"
							 Text="This a Multiline line textbox, This a Multiline line textbox, This a Multiline line textbox"
							 MinWidth="220"
							 FontSize="18"
							 AcceptsReturn="True"
							 TextWrapping="Wrap"
							 Margin="6"/>
		  </Border>

		  <!-- MyButton Button -->
		  <Button x:Name="MyButton"
						  Content="My Button"
						  HorizontalAlignment="Center"
						  Margin="0,16,0,0"/>

		  <!-- CheckBox -->
		  <CheckBox x:Name="MyCheckBox"
							  Content="My Checkbox"
							  IsChecked="True"
							  Margin="0,16,0,0"/>

		  <!-- HyperlinkButton  -->
		  <HyperlinkButton x:Name="MyHyperlinkButton"
										   Content="HyperlinkButton"
										   HorizontalAlignment="Center"
										   Margin="0,16,0,0"/>

		  <!-- My MyRadioButton_1 -->
		  <RadioButton x:Name="MyRadioButton_1"
								   Content="RadioButton 1"
								   Margin="0,16,0,0" />

		  <!-- My MyRadioButton_2 -->
		  <RadioButton x:Name="MyRadioButton_2"
								   Content="RadioButton 2" />

		  <!-- My ToggleButton -->
		  <ToggleButton x:Name="MyToggleButton"
									  Content="My ToggleButton"
									  HorizontalAlignment="Center"
									  Margin="0,16,0,8"/>
		</StackPanel>

		<StackPanel Grid.Column="2">

		  <!-- TextBlock-->
		  <TextBlock x:Name="MyTextBlock"
							   Text="Some Textblock"
							   FontSize="18"
							   HorizontalAlignment="Center"
							   Margin="0,24,0,0"/>

		  <!-- Rectangle -->
		  <Rectangle x:Name="MyRectangle"
							   Fill="Orange"
							   Height="50"
							   Width="50"
							   Margin="0,16,0,0"/>

		  <!-- Border -->
		  <Border x:Name="MyBorder"
						  Background="DodgerBlue"
						  Height="50"
						  Width="50"
						  Margin="0,16,0,0"/>

		  <!-- Grid -->
		  <Grid x:Name="MyGrid"
					  Background="Pink"
					  Height="50"
					  Width="50"
					  Margin="0,16,0,0"/>

		  <!-- Image -->
		  <Border Background="LightGreen"
						  Width="50"
						  Margin="0,16,0,0">
			<Image x:Name="MyImage"
						 Source="ms-appx:///Assets/Icons/search.png"
						 Stretch="UniformToFill"
						 Height="50"
						 Width="50" />
		  </Border>

		  <!-- ScrollViewer -->
		  <ScrollViewer x:Name="MyScrollViewer"
									  Margin="0,16,0,0">
			<Rectangle x:Name="MyScrollViewerElement"
								 Fill="Purple"
								 Height="50"
								 Width="50" />
		  </ScrollViewer>

		  <!-- ListView -->
		  <ListView x:Name="MyListView"
							  HorizontalAlignment="Center"
							  Margin="0,16,0,0">
			<ListViewItem x:Name="MyListViewItem">
			  <Rectangle Fill="Gold"
								   Height="50"
								   Width="50" />
			</ListViewItem>
		  </ListView>

		  <!-- ComboBox -->
		  <ComboBox x:Name="MyComboBox"
							  Width="190"
							  HorizontalAlignment="Center"
							  Margin="0,16,0,0">

			<!-- ComboBox -->
			<ComboBoxItem x:Name="MyComboBoxItem_1"
										Content="My ComboBoxItem_1"/>

			<!-- ComboBox -->
			<ComboBoxItem x:Name="MyComboBoxItem_2"
										Content="My ComboBoxItem 2"/>
		  </ComboBox>
		</StackPanel>
	  </Grid>
	</StackPanel>
  </Grid>
</UserControl>
