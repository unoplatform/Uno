<UserControl
	x:Class="UITests.Windows_UI_Xaml.DragAndDrop.DragDrop_Files"
	xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
	xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
	xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
	mc:Ignorable="d"
	d:DesignHeight="300"
	d:DesignWidth="400">

	<StackPanel>
        <Border CornerRadius="10" Width="100" Height="100" AllowDrop="True" DragOver="OnDragOver" Drop="OnDrop" Background="LightGreen" VerticalAlignment="Center" HorizontalAlignment="Center">
            <TextBlock Text="file drop here!"  VerticalAlignment="Center" HorizontalAlignment="Center" />
        </Border>
		<ListView x:Name="lv" />
	</StackPanel>
</UserControl>
