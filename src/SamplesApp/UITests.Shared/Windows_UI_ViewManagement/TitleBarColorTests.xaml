<UserControl
    x:Class="UITests.Shared.Windows_UI_ViewManagement.TitleBarColorTests"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:UITests.Shared.Windows_UI_ViewManagement"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    d:DesignHeight="300"
    d:DesignWidth="400">

	<ScrollViewer>
		<StackPanel Spacing="8">
			<TextBox x:Name="BackgroundColorTextBox" Header="Background color" Text="#FF0000" />
			<TextBox x:Name="ForegroundColorTextBox" Header="Foreground color" Text="#FF0000" />
			<StackPanel Orientation="Vertical" Spacing="8">
				<Button Click="SetAppViewTitleBarBackgroundColor_Click">Set AppView title bar background color</Button>
				<Button Click="SetAppViewTitleBarForegroundColor_Click">Set AppView title bar foreground color</Button>
				<Button Click="SetAppWindowTitleBarBackgroundColor_Click">Set AppWindow title bar background color</Button>
				<Button Click="SetAppWindowTitleBarForegroundColor_Click">Set AppWindow title bar foreground color</Button>
				<Button Click="SetStatusBarBackgroundColor_Click">Set status bar background color</Button>
				<Button Click="SetStatusBarForegroundColor_Click">Set status bar foreground color</Button>
				<Button Margin="4,0,0,0" Click="ResetDefault_Click">Reset default</Button>
			</StackPanel>
			<TextBlock Text="" x:Name="ErrorMessage" Foreground="Red" />
		</StackPanel>
	</ScrollViewer>
</UserControl>
