<UserControl x:Class="Uno.UI.Samples.Content.UITests.Slider.Slider_Inside_ListViewHeader" 
	xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
	xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
	xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
	xmlns:u="using:Uno.UI.Samples.Controls"
	xmlns:ios="http://uno.ui/ios"
	xmlns:win="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
	xmlns:android="http://uno.ui/android"
	mc:Ignorable="d ios android"
	d:DesignHeight="400"
	d:DesignWidth="400">

	<Grid>
		<Grid.RowDefinitions>
			<RowDefinition Height="Auto" />
			<RowDefinition Height="*" />
		</Grid.RowDefinitions>
		<!--Performance slider-->
		<Grid Margin="15,5">
			<ListView ItemsSource="{Binding [SampleItems]}"
					  Header="{Binding Parent}">
				<ListView.HeaderTemplate>
					<DataTemplate>
						<StackPanel Orientation="Vertical"
									x:Name="SP">

							<!--Slider-->
							<Slider x:Name="PerformanceSlider"
									Value="{Binding [OverallPerformance], Mode=TwoWay, FallbackValue=10}"
									SnapsTo="StepValues"
									StepFrequency="1"
									Maximum="10"
									Minimum="0" />

							<!--Slider Value-->
							<TextBlock Text="{Binding ElementName=PerformanceSlider, Path=Value}"
									   x:Name="tb"
									   CharacterSpacing="42"
									   FontSize="16"
									   FontStyle="Normal"
									   FontWeight="Normal"
									   Foreground="#ffffff"
									   LineHeight="20"
									   TextAlignment="Right"
									   VerticalAlignment="Center"
									   Width="25" />
						</StackPanel>
					</DataTemplate>
				</ListView.HeaderTemplate>
			</ListView>

		</Grid>
	</Grid>
</UserControl>
