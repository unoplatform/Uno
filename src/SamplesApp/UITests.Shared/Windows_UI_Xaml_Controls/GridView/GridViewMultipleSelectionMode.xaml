<UserControl
    x:Class="GenericApp.Views.Samples.Shared.Content.UITests.GridViewMultipleSelectionMode"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

	<GridView HorizontalAlignment="Stretch"
		      VerticalAlignment="Stretch"
			  CanDragItems="True"
			  CanReorderItems="True"
			  IsItemClickEnabled="False"
			  IsMultiSelectCheckBoxEnabled="True"
			  SelectionMode="Multiple">
		<GridView.ItemTemplate>
			<DataTemplate>
				<Border Width="200" Height="200"
						Background="LightBlue">
					<TextBlock FontSize="14" Text="{Binding}" />
				</Border>
			</DataTemplate>
		</GridView.ItemTemplate>
		<GridView.Items>
			<x:String>One</x:String>
			<x:String>Two</x:String>
			<x:String>Three</x:String>
			<x:String>Four</x:String>
			<x:String>Five</x:String>
			<x:String>Six</x:String>
			<x:String>Seven</x:String>
			<x:String>Eight</x:String>
			<x:String>Nine</x:String>
			<x:String>Ten</x:String>
		</GridView.Items>
	</GridView>
</UserControl>
