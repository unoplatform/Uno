<Page
    x:Class="UITests.Windows_UI_Xaml_Controls.TextBox.TextBox_Visibility"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:UITests.Windows_UI_Xaml_Controls.TextBox"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <StackPanel>
		<TextBox x:Name="MyTextBox" Text="My TextBox" Foreground="Red" />
		<Button x:Name="ShowHideButton" Content="Show/Hide TextBox" Click="ShowHideButton_Click" />
	</StackPanel>
</Page>
