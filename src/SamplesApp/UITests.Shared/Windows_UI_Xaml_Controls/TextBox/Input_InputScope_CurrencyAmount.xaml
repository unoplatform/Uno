<UserControl
	x:Class="Uno.UI.Samples.Content.UITests.TextBoxControl.Input_InputScope_CurrencyAmount"
	xmlns:controls="using:Uno.UI.Samples.Controls"
	xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
	xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
	xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
	mc:Ignorable="d"
	d:DesignHeight="300"
	d:DesignWidth="400">

    <controls:SampleControl SampleDescription="This textbox should allow decimal numbers">
		<controls:SampleControl.SampleContent>
			<DataTemplate>
				<TextBox x:Name="CurrencyTextBox" Header="Enter currency amount:"
						 InputScope="CurrencyAmount" />
			</DataTemplate>
		</controls:SampleControl.SampleContent>
	</controls:SampleControl>
</UserControl>

