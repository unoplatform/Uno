<UserControl
	x:Class="Uno.UI.Samples.Content.UITests.TextBoxControl.Input_InputScope_Email"
	xmlns:controls="using:Uno.UI.Samples.Controls"
	xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
	xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
	xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
	xmlns:ios="http://uno.ui/ios"
	xmlns:win="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
	xmlns:android="http://uno.ui/android"
	mc:Ignorable="d ios android"
	d:DesignHeight="300"
	d:DesignWidth="400">

	<StackPanel>
		<TextBox Header="Enter Email:" PlaceholderText="IsSpellCheckEnabled=True"
	         InputScope="EmailSmtpAddress"  IsSpellCheckEnabled="True" />
		<TextBox Header="Enter Email:" PlaceholderText="IsSpellCheckEnabled=False"
	         InputScope="EmailSmtpAddress"  IsSpellCheckEnabled="False" />		
	</StackPanel>
</UserControl>
