<UserControl
	x:Class="Uno.UI.Samples.Content.UITests.TextBoxControl.PasswordBox_InputScope_NumericPin"
	xmlns:controls="using:Uno.UI.Samples.Controls"
	xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
	xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
	xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
	xmlns:ios="http://uno.ui/ios"
	xmlns:not_win="http://uno.ui/not_win"
	xmlns:win="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
	xmlns:android="http://uno.ui/android"
	mc:Ignorable="d ios android not_win"
	d:DesignHeight="2000"
	d:DesignWidth="400">

	<controls:SampleControl SampleDescription="A PasswordBox with input scope set to numeric pin">
		<controls:SampleControl.SampleContent>
			<DataTemplate>
				<StackPanel VerticalAlignment="Top">
					<PasswordBox Header="Password Box"
											 Width="150"
											 InputScope="NumericPin"/>
				</StackPanel>
			</DataTemplate>
		</controls:SampleControl.SampleContent>
	</controls:SampleControl>
</UserControl>
