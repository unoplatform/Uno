<UserControl x:Class="Uno.UI.Samples.UITests.Image.Image_Stretch_Full_Taller"
			 xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
			 xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
			 xmlns:local="using:UITests.Shared.Windows_UI_Xaml_Controls.ImageTests"
			 xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
			 xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
			 xmlns:controls="using:Uno.UI.Samples.Controls"
			 mc:Ignorable="d"
			 d:DesignHeight="300"
			 d:DesignWidth="400">

	<ScrollViewer>
		<StackPanel>
			<!--UniformToFill-->
			<TextBlock Text="Stretch=UniformToFill and Image.Width=320 + Image.Height=200"
							   HorizontalAlignment="Center"
							   TextAlignment="Center"
							   TextWrapping="Wrap"
							   Margin="0,20,0,0" />
			<Border BorderThickness="1"
							BorderBrush="DarkBlue"
							Background="Orange"
							Margin="20">
				<Image Width="320"
							   Height="200"
							   Source="ms-appx:///Assets/test_image_836_1252.png"
							   Stretch="UniformToFill" />
			</Border>

			<!--Uniform-->
			<TextBlock Text="Stretch=Uniform and Image.Width=320 + Image.Height=200"
							   HorizontalAlignment="Center"
							   TextAlignment="Center"
							   TextWrapping="Wrap"
							   Margin="0,20,0,0" />
			<Border BorderThickness="1"
							BorderBrush="DarkBlue"
							Background="Orange"
							Margin="20">
				<Image Width="320"
							   Height="200"
							   Source="ms-appx:///Assets/test_image_836_1252.png"
							   Stretch="Uniform" />
			</Border>

			<!--Fill-->
			<TextBlock Text="Stretch=Fill and Image.Width=320 + Image.Height=200"
							   HorizontalAlignment="Center"
							   TextAlignment="Center"
							   TextWrapping="Wrap"
							   Margin="0,20,0,0" />
			<Border BorderThickness="1"
							BorderBrush="DarkBlue"
							Background="Orange"
							Margin="20">
				<Image Width="320"
							   Height="200"
							   Source="ms-appx:///Assets/test_image_836_1252.png"
							   Stretch="Fill" />
			</Border>

			<!--None-->
			<TextBlock Text="Stretch=None and Image.Width=320 + Image.Height=200"
							   HorizontalAlignment="Center"
							   TextAlignment="Center"
							   TextWrapping="Wrap"
							   Margin="0,20,0,0" />
			<Border BorderThickness="1"
							BorderBrush="DarkBlue"
							Background="Orange"
							Margin="20">
				<Image Width="320"
							   Height="200"
							   Source="ms-appx:///Assets/test_image_836_1252.png"
							   Stretch="None" />
			</Border>
		</StackPanel>
	</ScrollViewer>
</UserControl>
